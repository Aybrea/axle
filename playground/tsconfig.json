{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["vue/macros-global", "vite/client"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["dist", "node_modules"]
}
